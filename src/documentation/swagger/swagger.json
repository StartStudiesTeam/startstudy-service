{
  "openapi": "3.0.0",
  "info": {
    "tittle": "Start Study API Documentation",
    "contact": {
      "email": "startstudyservicemails@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "This is the development API"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "summary": "Register User",
        "description": "Route to person responsible for registering a new user",
        "tags": ["Register"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Register"
              }, 
              "examples": {
                "Register": {
                  "value": {
                    "id": 1,
                    "name": "My Name",
                    "nick_name": "mynickname",
                    "email": "myemail@email.com",
                    "password": "password@2024"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully!",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "id": 1,
                    "name": "New User",
                    "nick_name": "new_user",
                    "email": "newuser@email.com",
                    "password": "mypassword"
                  }
                }
              }
            }
          },
          "400": {
            "description": "There is already a registered user with the provided email or nick name."
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login",
        "tags": ["Login"],
        "security": [{"bearerAuth": []}],
        "description": "Log in and generate an authentication token.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "example": {
                "email": "mylogin@email.com",
                "senha": "mypassword"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Login"
                },
                "example": {
                  "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6NiwiaWF0IjoxNzAwNjczNzI2LCJleHAiOjE3MDA3MDI1MjZ9.ZTpfNDF5ooH1V86eoVd2EWIOw71qyaG4cFB_BUnID0U"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "Email": {
                    "value": {
                      "mensagem": "Email is a required field."
                    }
                  },
                  "Senha": {
                    "value": {
                      "mensagem": "Password is a required field."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "mensagem": "Invalid email and/or password(s)."
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "mensagem": "Internal Server Error."
                }
              }
            }
          }
        }
      }
    }
    },
    "components": {
    "schemas": {
      "Register": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          }, 
          "email": {
            "type": "string"
          }, 
          "password": {
            "type": "string"
          },
          "nick_name": {
            "type": "string"
          }, 
          "phone_number": {
            "type": "string"
          }
        },
        "required": ["name", "email", "nick_name", "password"]
      },
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "senha": {
            "type": "string"
          }
        },
        "required": ["email", "senha"]
      },
      "userToken": {
        "type": "object",
        "properties": {
          "user": {
          "type": "object",
            "properties": {
              "id": {
                "type": "number"
              },
              "nome": {
                "type": "string"
              },
              "email": {
                "type": "string"
              }
            }
          },
          "token": {
            "type": "string"
          }
        }
       },
        "Error": {
          "type": "object",
          "required": ["message"],
          "properties": {
            "message": {
              "type": "string"
            }
          }
        }
      },
      "securitySchemes": {
        "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}